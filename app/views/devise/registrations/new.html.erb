
<div class= "row">
  <div class="col-md-6 col-md-offset-3">
    <% if params[:plan] =='2' %>
      <h1 class="text-center">Pro Account</h1>
      <p class="text-center">Sign up for the pro account for $10/month and get access to the community and contact information</p>
    <%else%>
      <h1 class="text-center">Free Account</h1>
      <p class="text-center">Sign up for free and get basic access to the community</p>
    <%end%>
  </div>
  <div class= "col-md-6 col-md-offset-3 well">
    <h2>Sign up</h2>
      
    <% if params[:plan] == '1' %>  
        <%= render "basic_form" %>  
    <% else %>
        <%= render "pro_form" %>
    <% end %>
    
      <%= render "devise/shared/links" %>
    
  </div>
</div>